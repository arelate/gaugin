{{define "css-nav"}}
    <style id="css-nav">
        nav {
            height: 2em;
            padding: 0.5em;
            margin-top: 1em;
            display: flex;
            justify-content: center;
            align-items: center;
            column-gap: 1em;

        }

        nav a {
            color: var(--color);
            text-decoration: none;
            padding: 0.5em;
            border-radius: 4px;
            font-weight: bold;
        }

        nav .current {
            background-color: var(--color);
            color: var(--highlight-color);
            box-shadow: 0 0 5px var(--faint-color);
        }
    </style>
{{end}}