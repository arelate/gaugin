{{define "css-iframe"}}
    <style id="iframe">
        :root {
            background-color: transparent;
            margin: 0;
            padding: 0;
        }

        body {
            overflow: hidden;
        }

        #description-content,
        #changelog-content,
        #screenshots-content,
        #videos-content,
        #downloads-content,
        #steam-news-content,
        #steam-reviews-content {
            line-height: calc(1.5 * var(--normal));
            font-weight: normal;
            margin: var(--normal) var(--small);
            cursor: initial;
            word-break: break-word;
        }

        @media screen and (min-width: 800px) {
            #description-content,
            #changelog-content,
            #screenshots-content,
            #videos-content,
            #downloads-content,
            #steam-news-content,
            #steam-reviews-content {
                max-width: var(--product-details-width);
                margin: var(--large) auto;
            }
        }

        a {
            text-decoration: none;
            color: var(--system-blue-color);
        }

        ul {
            padding-inline-start: var(--normal);
        }

        hr {
            margin: 0;
            padding: 0;
            border: var(--xxx-small) solid var(--subtle-color);
        }

        img,
        video {
            width: 100%;
        }

        .additional-requirements,
        .copyrights {
            color: var(--subtle-color);
            font-size: var(--fs-x-smaller);
            margin-block-start: var(--normal);
        }

        summary {
            cursor: pointer;
            margin: var(--normal) 0;
        }

        #steam-news-content summary > h1 {
            display: inline;
            padding: 0;
            font-size: var(--normal);
        }

        #steam-news-content > details > summary > svg {
            width: var(--small);
            height: var(--small);
            margin-inline-start: var(--small);
        }

        #steam-news-content .steam-news-contents h1,
        #steam-news-content .steam-news-contents h2,
        #steam-news-content .steam-news-contents h3,
        #steam-news-content .steam-news-contents h4,
        #steam-news-content .steam-news-contents h5,
        #steam-news-content .steam-news-contents h6,
        #steam-news-content .steam-news-contents h7,
        #steam-news-content .steam-news-contents h8,
        #steam-news-content .steam-news-contents h9 {
            font-size: var(--normal);
            margin: 0;
        }

        #steam-news-content .steam-news-contents ul,
        #steam-news-content .steam-news-contents p {
            margin: var(--x-small) 0;
        }

        #steam-news-content .steam-news-contents ul > br {
            display: none;
        }

        #steam-news-content .steam-news-metadata {
            display: flex;
            flex-direction: column;
            font-size: var(--fs-x-smaller);
        }

        #steam-news-content .steam-news-metadata .metadata-value {
            font-weight: bold;
        }

        #steam-news-content .steam-news-contents {
            margin: var(--normal) 0;
        }

        #steam-news-content pre {
            font-family: sans-serif;
            white-space: break-spaces;
            max-width: 100%;
            overflow: hidden;
        }

        #steam-news-content .steam-news-contents img,
        #steam-news-content .steam-news-contents video,
        #steam-news-content .steam-news-contents iframe {
            display: none;
        }

        #steam-news-content mark.spoiler {
            background: var(--color);
            color: var(--color);
            cursor: pointer;
        }

        #steam-news-content mark.spoiler::selection,
        #steam-news-content mark.spoiler:active {
            color: var(--background-color);
        }

        #steam-reviews-content section {
            margin: var(--normal);
        }

        #steam-reviews-content section .metadata {
            font-size: var(--fs-smaller);
            color: var(--subtle-color);
        }

        #steam-reviews-content section .steam-review-contents {
            margin-block-start: var(--normal);
            margin-block-end: var(--large);
        }

        #screenshots-content .screenshot {
            width: 100%;
            border-radius: var(--border-radius);
            margin-block-end: var(--normal);
        }

        #videos-content video {
            width: 100%;
            border-radius: var(--border-radius);
            object-fit: cover;
            margin-block-end: var(--normal);
        }

        #videos-content details summary {
            display: flex;
            justify-content: center;
        }

        #videos-content details summary h1 {
            font-size: var(--normal);
        }

        #videos-content .youtube-video-link img {
            border-radius: var(--border-radius);
        }

        #videos-content div.missing-src {
            width: 100%;
            aspect-ratio: 3/2;
            border-radius: var(--border-radius);
            background-color: var(--background-color);
        }

    </style>
{{end}}
